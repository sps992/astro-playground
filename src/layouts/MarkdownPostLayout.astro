---
import Header from "../components/Header.astro";
import Head from "../components/Head.astro";
import Footer from "../components/Footer.astro";
const { frontmatter } = Astro.props;
---
<Head />
<Header />
<div>
  <div class="w-full">
    <img src={frontmatter.image.url} alt={frontmatter.image.alt} class="object-cover w-full min-h-25vh h-full max-h-168 bg-teal-100 bg-center">
  </div>
  <div class="bg-teal-700 py-6 px-3 mb-8">
    <div class="container mx-auto">
      <h1 class="pl-3">{frontmatter.title}</h1>
      <p class="text-sm tracking-widest pl-3 font-bold">{frontmatter.pubDate.slice(0,10)}</p>
      <ul class="flex flex-wrap divide-x-2 divide-orange-500 my-4">
        {frontmatter.tags.map((tag) => (<li class="px-2 capitalize"><a href={`/tags/${tag}`}>{tag}</a></li>))}
      </ul>
      <p class="pl-3">Written by {frontmatter.author}</p>
    </div>
  </div>
</div>
<div class="outside-container min-h-25vh">
  <slot />
</div>
<Footer />
<script>
  import "../scripts/menu.js";
</script>
