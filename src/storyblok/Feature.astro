---
import { storyblokEditable } from "@storyblok/astro";

const { blok } = Astro.props;
---

<div {...storyblokEditable(blok)} class='w-full p-12 bg-offwhite rounded-[5px] text-center'>
    <img src={blok.FeaturedImage.filename && blok.FeaturedImage.filename} alt="" class=" w-full h-48 object-cover bg-center">
  <div class="w-full h-48">
    
  </div>
  <h3 class='text-2xl text-slate-800 font-bold'>{blok.name}</h3>
  <p class="text-slate-800 dark:text-tertiary-500">{blok.TextArea}</p>
</div>

