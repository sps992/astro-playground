---
  import ThemeIcon from './ThemeIcon.astro';
  const pathname = new URL(Astro.request.url).pathname;
  const currentPath = pathname; 
  const baseNavStyles = "transition-all duration-500 ease-in-out hover:text-primary-500 focus:text-primary-500"
---

  <nav class="nav-links flex justify-between">
    <ul class="flex flex-col lg:flex-row justify-center">
      <li class="sm:ml-12">
        <a href='/' class={currentPath === "/" ? "active " + baseNavStyles : baseNavStyles}>Home</a>
      </li>
      <li class="sm:ml-12">
        <a href='/about/' class={currentPath === "/about/" ? "active " + baseNavStyles : baseNavStyles}>About</a>
      </li>
      <li class="sm:ml-12">
        <a href='/blog/' class={currentPath === "/blog/" ? "active " + baseNavStyles : baseNavStyles}>Blog</a>
      </li>
      <li class="sm:ml-12">
        <a href='/tags/' class={currentPath === "/tags/" ? "active " + baseNavStyles : baseNavStyles}>Tags</a>
      </li>
      <li class="sm:ml-12 hidden lg:inline">
        <ThemeIcon />
      </li>
    </ul>
  </nav>